		String endpointPostUser = "public-api/users";
		
		Map user = new HashMap<>();
		user.put("name", userName);
		user.put("email", userEmail);
		user.put("gender", "Female");
		user.put("status", "Active");
		
		// Create new user
		int userId = given(). 
			auth().  
